<%= erb :header %>

<div class="container">
  <h1 class="text-center">Edit</h1>

  <form method="post" action ="/item/<%= detail[0].id%> " >
    <input type="hidden" name="_method" value="put" />
    <div class="mb-3">
      <label for="name" class="form-label">Items Name: </label>
      <input name="name" class="form-control" type ="text" placeholder="Item name" value="<%= detail[0].name%>">
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price: </label>
      <input name="price" class="form-control" type ="number" placeholder="Item price" value=<%= detail[0].price%>>
    </div>
    <div class="mb-3">  
    <label for="category" class="form-label">Category Name: </label>
      <select class="form-select" name="category">
      <% category.each do |category| %>
        <option value=<%= category.id%> 
        <%= if detail[0].category.id == category.id
            "selected = 'selected'"
            end
        %>
        ><%= category.name%></option>
      <% end %>
      </select>
    </div>
    <button class="btn btn-primary" type ="submit">Update item</button>
  </form>
</div>

<%= erb :footer %>
